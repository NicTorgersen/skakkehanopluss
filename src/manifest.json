{
  "manifest_version": 2,
  "name": "Ska'kke ha no' pluss",
  "short_name": "Ska'kke ha no' +",
  "description": "Fjerner plussartikler fra en rekke norske nettaviser.",
  "author": "Nic",

  "version": "1.5.7",
  "applications": {
    "gecko": {
      "id": "skakkehanopluss@nictorgersen.addons.mozilla.org"
    }
  },


  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon.png"
  },

  "page_action": {
    "default_icon": {
      "38": "assets/icon38.png",
      "128": "assets/icon.png"
    },
    "default_title": "Ska'kke ha no' pluss"
  },

  "permissions": [
    "*://*.vg.no/*",
    "*://*.tb.no/*",
    "*://*.dagbladet.no/*",
    "*://*.adressa.no/*",
    "*://*.bt.no/*",
    "*://*.tk.no/*",
    "*://*.smp.no/*",
    "*://*.rbnett.no/*",
    "*://*.gjengangeren.no/*",
    "*://*.ta.no/*",
    "*://*.varden.no/*",
    "*://*.avisa-valdres.no/*",
    "*://*.dn.no/*",
    "*://*.ba.no/*",
    "*://*.an.no/*",
    "*://*.itromso.no/*",
    "notifications",
    "storage"
  ],

  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": [
        "*://*.vg.no/",
        "*://*.tb.no/",
        "*://*.dagbladet.no/",
        "*://*.bt.no/",
        "*://*.adressa.no/",
        "*://*.tk.no/",
        "*://*.smp.no/",
        "*://*.rbnett.no/",
        "*://*.gjengangeren.no/",
        "*://*.ta.no/",
        "*://*.varden.no/",
        "*://*.avisa-valdres.no/",
        "*://*.dn.no/",
        "*://*.ba.no/",
        "*://*.an.no/",
        "*://*.itromso.no/"
      ],
      "js": ["content_scripts/remove_plus.js"]
    }
  ]
}
